{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run FastAPI App",
      "type": "shell",
      "command": "python",
      "args": ["-m", "uvicorn", "src.app:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Uvicorn running.*",
          "endsPattern": "^.*Application startup complete.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
